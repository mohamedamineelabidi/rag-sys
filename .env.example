# RAG Document Assistant - Environment Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# AZURE OPENAI CONFIGURATION
# =============================================================================
# Azure OpenAI endpoint URL (e.g., https://your-resource.openai.azure.com/)
AZURE_OPENAI_ENDPOINT=

# Azure OpenAI API key
AZURE_OPENAI_API_KEY=

# API version (e.g., 2024-02-15-preview)
OPENAI_API_VERSION=2024-02-15-preview

# Deployment name for chat completions (e.g., gpt-4, gpt-35-turbo)
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=

# Deployment name for embeddings (e.g., text-embedding-3-small)
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT_NAME=

# =============================================================================
# QDRANT VECTOR DATABASE CONFIGURATION
# =============================================================================
# Qdrant Cloud URL (e.g., https://your-cluster.qdrant.io)
QDRANT_URL=

# Qdrant API key
QDRANT_API_KEY=

# Collection name for storing document vectors
QDRANT_COLLECTION_NAME=documents

# =============================================================================
# INDEXING CONFIGURATION (Optional)
# =============================================================================
# Enable/disable persistent indexing cache
USE_INDEXING_CACHE=true

# Sync deleted files on startup
SYNC_DELETIONS_ON_STARTUP=true

# Skip startup document scan
SKIP_STARTUP_SCAN=false

# Comma-separated list of directories to index (empty = all)
INDEXING_INCLUDE_DIRS=

# Document chunking settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Qdrant batch operation sizes
QDRANT_UPSERT_BATCH=256
QDRANT_DELETE_BATCH=100

# Embedding vector dimensions
EMBEDDING_SIZE=1536

# =============================================================================
# DEVELOPMENT/TESTING OPTIONS
# =============================================================================
# Enable fake services mode (no external API calls)
USE_FAKE_SERVICES=false

# Backend URL for frontend (default: http://localhost:8000)
BACKEND_URL=http://localhost:8000
